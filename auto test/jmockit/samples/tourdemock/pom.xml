      <!-- Spring Test -->
      <dependency>
         <groupId>org.springframework</groupId><artifactId>spring-test</artifactId><version>3.1.0.RELEASE</version>
         <scope>test</scope>
      </dependency>
      <dependency>
         <groupId>org.springframework</groupId><artifactId>spring-core</artifactId><version>3.1.0.RELEASE</version>
